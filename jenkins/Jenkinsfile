pipeline {
   agent any
   
   environment {
       DEMO='1.3'
   }

   stages {
      stage('stage-1') {
         steps {
            echo "$DEMO Stage 1"
         }
      }
      stage('stage-2') {
         input {
            message 'Proceed?'
            ok 'Do it!'
         }
         steps {
             echo "Deploying release ${RELEASE} to environment ${TARGET_ENVIRONMENT}"
         }
      }
      stage('stage-3') {
         steps {
            echo 'Stage 3'
         }
      }
      stage('stage-4') {
         steps {
            echo 'Stage 4'
         }
      }
   }
}